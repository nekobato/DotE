    "stylelint-order": "^6.0.4",
    "typescript": "^5.4.5",
    "vite": "^5.2.8",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-resolve": "^2.5.1",
    "vue": "^3.4.23",
    "vue-router": "^4.3.2",
    "vue-tsc": "^2.0.13"
  }
