    "release": "pnpm build && electron-builder --publish always -c --config electron-builder.config.cjs",
    "build:icon": "electron-icon-builder --input=./assets/icons/app_icon.png --output=./public",
    "typecheck": "tsc"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "main": "./dist-electron/index.js",
  "dependencies": {
    "electron-fetch": "^1.9.1",
    "electron-log": "^5.1.2",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.8"
  },
  "devDependencies": {
    "@types/react": "file:stub/types__react",
    "@storybook/addon-essentials": "^8.0.6",
    "@storybook/vue3-vite": "^8.0.5",
    "storybook": "^8.0.6",
    "@iconify/vue": "^4.1.1",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vueuse/core": "^10.9.0",
    "electron": "30.0.1",
    "electron-builder": "^24.13.3",
    "electron-icon-builder": "^2.0.1",
    "element-plus": "^2.6.3",
    "mfm-js": "^0.24.0",
    "misskey-js": "^2024.3.1",
