{
  "name": "hazy",
  "private": true,
  "version": "0.0.2",
  "description": "Misskey client for desktop",
  "repository": {
    "type": "git",
    "url": "https://github.com/nekobato/hazy.git"
  },
  "scripts": {
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prebuild": "npm run generate",
    "build": "NODE_ENV=development electron-builder -c ./electron-builder.config.js",
    "publish": "NODE_ENV=development electron-builder --publish always -c ./electron-builder.config.js",
    "build:icon": "electron-icon-builder --input=./assets/icons/app_icon.png --output=./public"
  },
  "main": "./dist-electron/index.js",
  "dependencies": {
    "electron-fetch": "^1.9.1",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "nanoid": "^5.0.3"
  },
  "devDependencies": {
    "@iconify/vue": "^4.1.1",
    "@nuxt/devtools": "latest",
    "@pinia/nuxt": "^0.5.1",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vueuse/core": "^10.6.1",
    "electron": "27.1.0",
    "electron-builder": "^24.6.4",
    "electron-icon-builder": "^2.0.1",
    "mfm-js": "^0.23.3",
    "misskey-js": "^0.0.16",
    "nuxt": "^3.8.2",
    "nuxt-electron": "^0.6.0",
    "pinia": "^2.1.7",
    "postcss-html": "^1.5.0",
    "prettier": "^3.1.0",
    "sass": "^1.69.5",
    "stylelint": "^15.11.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-scss": "^13.1.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-order": "^6.0.3",
    "tree-kill": "^1.2.2",
    "typescript": "^5.3.2",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-resolve": "^2.5.1"
  }
