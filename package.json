{
  "name": "hazy",
  "private": true,
  "version": "0.0.2",
  "description": "Misskey client for desktop",
  "repository": {
    "type": "git",
    "url": "https://github.com/nekobato/hazy.git"
  },
  "scripts": {
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prebuild": "npm run generate",
