{
  "name": "hazy",
  "private": true,
  "version": "0.0.1",
  "description": "Misskey client for desktop",
  "repository": {
    "type": "git",
    "url": "https://github.com/nekobato/hazy.git"
  },
  "scripts": {
    "dev:pre": "NODE_ENV=development-pre node scripts/watch.mjs",
    "dev": "NODE_ENV=development node scripts/watch.mjs",
    "prebuild": "NODE_ENV=production vue-tsc --project packages/renderer/tsconfig.json --noEmit && node scripts/build.mjs",
    "build": "NODE_ENV=production electron-builder --config ./electron-builder.config.js",
    "publish": "NODE_ENV=production electron-builder --publish always --config ./electron-builder.config.js",
    "debug": "npm run prebuild && vite ./packages/renderer",
    "electron:generate-icons": "electron-icon-builder --input=./public/icon.png --output=build --flatten"
  },
  "main": "dist/main/index.cjs",
  "dependencies": {
    "electron-fetch": "^1.9.1",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@iconify/vue": "^4.0.2",
    "@types/uuid": "^9.0.1",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vueuse/core": "^10.3.0",
    "electron": "25.3.2",
    "electron-builder": "^24.6.3",
    "electron-icon-builder": "^2.0.1",
    "electron-rebuild": "^3.2.9",
    "element-plus": "^2.3.9",
    "mfm-js": "^0.23.3",
    "misskey-js": "^0.0.16",
    "node-gyp": "^9.3.1",
    "nuxt-electron": "^0.6.0",
    "pinia": "^2.1.6",
    "postcss-html": "^1.5.0",
    "prettier": "^3.0.2",
    "sass": "^1.64.2",
    "stylelint": "^15.10.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-scss": "^12.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-order": "^6.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-electron": "^0.14.0-beta.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-resolve": "^2.3.0",
    "vue": "^3.2.45",
    "vue-router": "^4.1.6",
    "vue-tsc": "^1.8.8",
    "vuex": "^4.1.0"
  },
  "env": {
    "PORT": 3000
  },
  "build": {
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    }
  }
}
