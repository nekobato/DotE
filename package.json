{
  "name": "hazy",
  "version": "0.0.9",
  "description": "Misskey client for desktop",
  "repository": {
    "type": "git",
    "url": "https://github.com/nekobato/hazy.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build && electron-builder --config electron-builder.config.cjs",
