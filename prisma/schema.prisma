generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin", "darwin-arm64"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  username   String
  avatarUrl  String?
  token      String
  instanceId Int
  instance   Instance @relation(fields: [instanceId], references: [id])
}

model Instance {
  id      Int    @id @default(autoincrement())
  type    String
  name    String
  url     String
  iconUrl String
  User    User[]
}

model Timeline {
  id      Int    @id @default(autoincrement())
  userId  Int
  channel String
  options String
}

model Post {
  id         Int @id @default(autoincrement())
  userId     Int
  instanceId Int
}

model Settings {
  key   String @unique
  value String
}
